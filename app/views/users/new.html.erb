<div id='sign-up-div'>
<%= form_for @user, class: "form-horizontal" do |form| %>
  <fieldset>
    <legend>Sign Up</legend>

    <div class="form-group">
      <%= form.label :first_name , class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :first_name, type: 'text', placeholder: 'First Name', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :last_name , class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :last_name, type: 'text', placeholder: 'Last Name', class: 'form-control' %>
      </div>
    </div>




    <div class="form-group">
      <%= form.label :email , class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :email, type: 'email', placeholder: 'Email', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.password_field :password, type: 'password', placeholder: 'Password', class: 'form-control' %>
        <%= form.password_field :password_confirmation, type: 'password', placeholder: 'Confirm Password', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :phone, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.telephone_field :phone, placeholder: 'Phone Number', class: 'form-control' %>
      </div>
    </div>

