<div class="col-lg-6 col-sm-6">
    <div class="card hovercard">
        <div class="card-background">
            <% if @user.avatar.file.nil? %>
              <%= image_tag("default-avatar.svg") %>
            <% else %>
              <img class="card-bkimg" alt="" src="<%= @user.avatar.big.url %>">
            <% end %>
        </div>
        <div class="useravatar">
            <% if @user.avatar.file.nil? %>
              <%= image_tag("default-avatar.svg") %>
            <% else %>
              <img alt="" src="<%= @user.avatar.thumb.url %>">
            <% end %>
        </div>
        <div class="card-info"> <span class="card-title"><%= @user.full_name %></span>

        </div>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-equalizer" aria-hidden="true"></span>
                <div class="hidden-xs">Profile</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span>
                <div class="hidden-xs">Your Booking</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                <div class="hidden-xs">Your Listing</div>
            </button>
        </div>
    </div>

        <div class="well">
      <div class="tab-content">
        <div class="tab-pane fade in active" id="tab1">
          <div class="user-profile-info">
          	<ul>
           	  <li>Email: <%= @user.email %></li>
           	  <li>Gender: <%= @user.gender %></li>
           	  <li>Birthdate: <%= @user.birthdate %></li>
           	  <li>Phone: <%= @user.phone %></li>
           	  <li>Country: <%= @user.country %></li>

            </ul>
          </div>
        </div>
        <div class="tab-pane fade in" id="tab2">
        <div class="user-profile-booking">
        	<p> Sorry, you don't seem to have any booking at the moment. </p>
        </div>
        </div>
        <div class="tab-pane fade in" id="tab3">
        <div class="user-profile-listing">
          <% @user.listings.each do |l| %>
          	<ul>
          	  <li><a href="/listings/<%= l.id %>"><%= l.name %></a></li>
          	</ul>
          <% end %>
         </div>
        </div>
      </div>
    </div>
    
    </div>